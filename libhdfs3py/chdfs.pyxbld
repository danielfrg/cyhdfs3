def make_ext(modname, pyxfilename):
    from distutils.extension import Extension
    return Extension(name = modname,
                     sources=[pyxfilename],
                     include_dirs=['/usr/local/include/hdfs'],
                     library_dirs=['/usr/local/lib/'],
                     libraries=['hdfs3'],
                    )

def make_setup_args():
    return dict(script_args=["--verbose"])
